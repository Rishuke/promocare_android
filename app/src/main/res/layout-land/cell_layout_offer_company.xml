<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/offer_image_view_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/annonce_image"
            android:scaleType="centerCrop"
            android:src="@drawable/error_black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/offer_anonce_title_text_view_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="aaaaaaaaaaaaaaaaaaa"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/offer_company_name_text_view_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:text="aaaaaaaaaaaaaaaaaaa"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/offer_date_text_view_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:text="aaaaaaaaaaaaaaaaaaa"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/circle_linear_grey"
            android:text="PENDING"
            android:textSize="25dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>