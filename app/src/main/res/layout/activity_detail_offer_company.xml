<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/d_tail_de_votre_offre"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/circle_linear"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/offer_detail_image_company"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/annonce"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/offer_detail_annonce_tilte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/detail_offer_company_sender_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/offer_detail_annonce_date_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textSize="16sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="-15dp"
            android:text="Description de l'annonce : "
            android:textStyle="bold"
            android:textSize="18sp"/>

        <ScrollView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:background="@drawable/circle_linear"
            android:layout_height="150dp">

            <TextView
                android:id="@+id/offer_detail_description_annonce_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>

        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="-15dp"
            android:text="Description de l'offre : "
            android:textStyle="bold"
            android:textSize="18sp"/>

        <ScrollView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:background="@drawable/circle_linear"
            android:padding="20dp"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/offer_detail_offer_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>

        </ScrollView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>